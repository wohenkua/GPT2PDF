{
  "manifest_version": 3,
  "name": "ChatGPT 对话导出 PDF",
  "version": "0.1.0",
  "description": "在 ChatGPT 对话页一键导出为打印友好 PDF（保留文本、链接等）。",
  "action": {
    "default_title": "ChatGPT → PDF"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "src/background/sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/injectButton.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/export/*",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
